<UserControl x:Name="userControl" x:Class="IssueTracker.WPF.Views.Categories.Link"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:core="clr-namespace:IssueTracker.WPF.Core"
             xmlns:data="clr-namespace:IssueTracker.Data;assembly=IssueTracker.Data"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <UserControl.Resources>
        <core:ColourConverter x:Key="ColourConverter"/>
    </UserControl.Resources>
    <Grid Margin="0,0,0,0" Name="LinkGrid" DataContext="{Binding ElementName=userControl, Path=Category, Mode=OneWay}" d:DataContext="{d:DesignInstance data:Category}">
        <Button Margin="0" Content="{Binding Name}" Cursor="Hand" Style="{StaticResource pill}" Background="{Binding Colour, Converter={StaticResource ColourConverter}}" />
    </Grid>
</UserControl>
